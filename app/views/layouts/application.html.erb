<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Winnie Wu</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Roboto:300,400,500,700' %>
  </head>
  <body>
    <div class="top">
      <div class="name-title">
        <a href="<%= about_path %>">Winnie<br>Wu</a>
      </div>
      <div class="menu pure-menu pure-menu-horizontal">
        <ul class="pure-menu-list">
          <li class="menu--item pure-menu-item pure-menu-item-has-children pure-menu-allow-hover">
            <%= link_to('work', '/') %>
            <ul class="menu--submenu pure-menu-children">
              <li class="menu--subitem pure-menu-item">
                <a href="#">photo</a>
              </li>
              <li class="menu--subitem pure-menu-item">fine art</li>
            </ul>
          </li>
          <li class="menu--item pure-menu-item">
            <%= link_to('about', about_path) %>
          </li>
          <li class="menu--item pure-menu-item">
            <%= link_to('writs', writing_path) %>
          </li>
        </ul>
      </div>
    </div>
    <div class="app-body">
      <%= yield %>
    </div>
  </body>
</html>
